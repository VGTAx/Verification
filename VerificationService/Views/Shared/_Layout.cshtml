<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Verification</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
  <div class="wrapper">
    <header>
      <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
          <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
              <li>
                <a class="nav-link text-dark fw-bolder" asp-area="" asp-controller="Verification" asp-action="Index">Реестр проверок</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-dark fw-bolder" asp-controller="InspectingOrganization" asp-action="Index">Проверяющие организации</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-dark fw-bolder" asp-controller="SmallBusinessEntity" asp-action="Index">Субъекты малого предринимательства</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div class="container">
      <main role="main" class="pb-3">
        @RenderBody()
      </main>
    </div>

    <footer class="border-top footer text-muted">
      <div class="container">
        &copy; 2023 - Verification
      </div>
    </footer>
  </div>
  
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
