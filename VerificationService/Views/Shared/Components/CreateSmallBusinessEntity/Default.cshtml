@model VerificationApp.Models.SmallBusinessEntity

@{
    ViewData["Title"] = "Create";
}

<div class="modal fade" id="modalCreateSmallBusinessEntity" tabindex="-1" aria-labelledby="modalCreateSmallBusinessEntity" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Добавление СМП</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="createSmallBusinessEntityForm" asp-action="Create" asp-controller="SmallBusinessEntity" data-controller="SmallBusinessEntity" data-target="Create">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div hidden class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" id="NameSpan" class="text-danger"></span>
          </div>
          <div class="modal-footer">
            <input type="submit" value="Добавить" class="btn btn-primary" />
          </div>
        </form>
      </div>      
    </div>
  </div>
</div>

